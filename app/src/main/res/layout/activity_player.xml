<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pl.cba.martindesign.simplemp3.Player"
    android:id="@+id/activityplayer"
    android:background="@android:color/holo_blue_bright">

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressSeekBar"
        android:indeterminate="false"
        android:backgroundTint="#ffffff"
        android:layout_above="@+id/nextButton"
        android:layout_alignLeft="@+id/prevButton"
        android:layout_alignStart="@+id/prevButton"
        android:progressTint="#f9fffe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="27sp"
        android:text="Large Text"
        android:id="@+id/fileNameTextView"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:layout_above="@+id/progressSeekBar"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <ImageButton
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextButton"
        android:src="@drawable/next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#00ffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forwardButton"
        android:src="@drawable/forward"
        android:background="#00ffffff"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/nextButton"
        android:layout_toStartOf="@+id/nextButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backwardButton"
        android:src="@drawable/backward"
        android:background="#00ffffff"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/prevButton"
        android:layout_toEndOf="@+id/prevButton" />

    <ImageButton
        android:paddingLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prevButton"
        android:background="#00ffffff"
        android:src="@drawable/previous"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playButton"
        android:layout_alignTop="@+id/forwardButton"
        android:layout_centerHorizontal="true"
        android:src="@drawable/play"
        android:background="#00ffffff" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_above="@+id/fileNameTextView"
        android:background="#cfd8dc"
        android:layout_alignParentTop="true" />

</RelativeLayout>
